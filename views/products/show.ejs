<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<main class="container">
    
    <%- include("../partials/flash") %>
    
    <div class="row">
        <div class="col-lg-6">
            <div class="card mx-auto" style="width: 23rem;">
                <img src="<%=product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <p class="card-text"><%=product.desc%></p>
                  <h5 class="card-title">&#x20B9 <%=product.price%></h5>
                  <a href="#" class="btn btn-primary btn-small">Buy Now</a>
                  <a href="#" class="btn btn-secondary btn-small">Add to car</a>
                  <a href="#" class="btn btn-info btn-small">Edit</a>
                  <form class="d-inline-block" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-small">Delete</button>
                </form>
                  </div>
              </div>
        </div>
        <div class="col-lg-5">
            <h1 class="display-6">Leave a Review</h1>
            <form action="/products/<%=product.id%>/review" method="POST">
                <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-control"type="range" min="0" max="5" name="rating" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="comment">Comment</label>
                <textarea class="form-control" name="comment" id="comment" rows="3"></textarea>
            </div>
            <button class=" mb-2 btn btn-success btn-small">Submit</button>
            </form>
            <div class="mb-3">
                <%for(let review of product.reviews){%>
                    <div class="card mb-2">
                        <div class="card-body">
                          <h5 class="card-title">Rating: <%=review.rating%></h5>
                          <p class="card-text"><%=review.comment%></p>
                          <a href="#" class="btn btn-small btn-danger">Delete</a>
                        </div>
                      </div>
                <%}%>
            </div>
        </div>
        
    </div>
</main>



<%- include("../partials/footer") %>